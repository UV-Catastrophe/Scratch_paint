<div style='width: 230px; float:left; background: #d0dfaa; position:relative; padding:10px'>
  <% page = (page.nil?) ? '1' : page %>

  <%= image_tag("#{@piece.codename}/thumb.png", :style => 'display: block; margin:0px auto; border:2px solid #66667b') %>



  <h4>
    <%= link_to '', piece_path(:id => @piece, :category_id => @category, :page_num => @page_num), :style => "position: absolute; width:100%; height:100%; z-index:1; top:0; left:0; opacity:0;" %>
  </h4> 
  <h4 style='text-align:center; margin: 0px; width:autos'>
    <%= @piece.title %>
  </h4>
  <h5 style='text-align:center; margin: 0px; width:autos'>
   <%= @piece.dimensions %>
  </h5>

</div>