<%= image_tag("#{@piece.codename}/primary.png", alt: "rails.png", :style => 'display: block; margin:25px auto; border:2px solid #66667b') %>

<div style='width: 400px; margin: 10px auto; display:block; line-height: 200%;'>
  <h1 style='text-align: center; width: 100%; color: #2b3b44;'>
    <%= "Title: #{@piece.title}" %><br>
    <%= "Codename: #{@piece.codename}" %>
  </h1>
</div>
<div style='width:750px; padding: 30px'>
<%= form_for @piece do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.label :dimensions %>
  <%= f.text_field :dimensions %><br>

  <div class="actions">
  	<%= f.submit %>
  </div>
<% end %>

<div style='width:300px; margin:30px auto; border: 3px solid #2b3b44; background: #f0ffcc; padding:0px' >
  <h3 style = 'margin: 10px; text-align:center'>
    <%= link_to 'Back', piece_path(@piece, :category_id => @category, :page_num => @page_num) %>
  </h3>
</div>

<% if @piece.comments.size > 0 %>
  </div>
    <div style='width:100%; border-top:3px solid #2b3b44' >
      <%= render 'del_comments_form' %>
  </div>
<% end %>

